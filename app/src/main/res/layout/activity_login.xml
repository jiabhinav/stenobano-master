<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradinat"
    tools:context=".auth.Login">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help>>"
        android:id="@+id/help"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:textColor="#ffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <ImageView
            android:layout_width="80pt"
            android:layout_height="50pt"
            android:src="@drawable/stenobano_logo"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login Here"
            android:textSize="20dp"
            android:id="@+id/mesg"
            android:layout_marginTop="5dp"
            android:typeface="monospace"
            android:textColor="#faf6f6"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10pt"
            android:orientation="vertical"

            >


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:id="@+id/mo"
                android:textColorHint="#fff">

                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                    android:drawablePadding="5dp"
                    android:hint="Register Mobile no."
                    android:inputType="text"
                    android:maxLength="50"
                    android:textColor="#fff"
                    android:textSize="18dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:id="@+id/em"
                android:textColorHint="#fff">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:drawablePadding="5dp"
                    android:hint="Email"
                    android:inputType="text"
                    android:maxLength="50"
                    android:textColor="#fff"
                    android:textSize="18dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"
                android:id="@+id/pa"
                android:padding="5dp">
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:drawableLeft="@drawable/ic_lock_open_black_24dp"
                    android:textColor="#fff"
                    android:textSize="18dp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"

                    android:alpha="75"
                    android:text="Login"
                    android:textColor="#7a148e"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10pt"
                    android:typeface="serif"
                    android:alpha="75"
                    android:text="Pay"
                    android:textColor="#f40b03"
                    android:textSize="10pt"
                    android:textStyle="bold" />

            </RelativeLayout>
            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text= "Forgot Password?"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textColor="#f9f2f2" />
            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text= "Logout,Click Here"
                android:textStyle="bold"
                android:textSize="18dp"
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:textColor="@color/red" />
            <TextView
                android:id="@+id/already_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text= "New User?"
                android:textStyle="bold"
                android:textColor="#f9f2f2" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>

</androidx.core.widget.NestedScrollView>
