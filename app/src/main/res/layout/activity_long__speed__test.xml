<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.Add_Word_Copy">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload A to Z Word Here"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:textColor="@color/textColor"
            android:layout_marginTop="2pt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5pt"
                    android:text="Title:"
                    android:textSize="7pt"
                    android:textColor="@color/textColor"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:paddingLeft="2pt"
                    android:padding="5pt"
                    android:inputType="textCapWords|textMultiLine"
                    android:layout_marginRight="20pt"
                    android:background="@drawable/my_border_round"
                    android:textColorHint="#000" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20pt">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:layout_marginLeft="2pt"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Audio"
                        android:id="@+id/audioselect"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/audio"
                        android:layout_width="20pt"
                        android:layout_height="20pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2pt"
                        android:src="@mipmap/ic_audio" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:layout_marginLeft="2pt"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Choose"

                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/choose"
                        android:layout_width="20pt"
                        android:layout_height="20pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2pt"
                        android:src="@mipmap/ic_choose_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2pt"
                    android:layout_marginTop="5pt"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5pt"
                        android:text="Camera"

                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/camera"
                        android:layout_width="20pt"
                        android:layout_height="20pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2pt"
                        android:src="@mipmap/ic_camera_launcher" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2pt"
                    android:layout_marginTop="5pt"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2pt"
                        android:text="image(1)"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView23"
                        android:layout_width="20pt"
                        android:layout_height="20pt"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2pt" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5pt"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/select2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2pt"
                        android:textAlignment="center"
                        android:text="image(2)"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView24"
                        android:layout_width="20pt"
                        android:layout_height="20pt"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2pt" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:layout_marginRight="10pt"
            android:layout_marginTop="20pt"
            android:text="UPLOAD"
            android:id="@+id/button_upload"
            android:textColor="#ffff"
            android:background="@color/cardbuttonbackground"/>

    </LinearLayout>
</RelativeLayout>