<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradinat"
    tools:context=".auth.Registration">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:id="@+id/ll">

        <ImageView
            android:layout_width="80pt"
            android:layout_height="50pt"
            android:src="@drawable/stenobano_icon"
            android:scaleY=".8"
            android:scaleX="1"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register a new membership"
            android:textSize="18dp"
            android:layout_marginTop="5dp"

            android:textColor="#faf6f6"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"

            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"
                android:padding="5dp">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="5dp"
                    android:hint="Name"
                    android:inputType="textCapSentences"
                    android:maxLength="30"
                    android:textColor="#fff"
                    android:textSize="18dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"
                android:padding="5dp">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="5dp"
                    android:hint="Email"
                    android:inputType="text"
                    android:maxLength="50"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:textColor="#fff"
                    android:textSize="18dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"
                android:padding="5dp">
                <EditText
                    android:id="@+id/contact_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                    android:drawablePadding="5dp"
                    android:hint="Contact No.(10 digit number)"
                    android:inputType="number"
                    android:maxLength="13"
                    android:padding="6dp"
                    android:textColor="#fff"
                    android:textSize="18dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"

                android:padding="5dp">
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:hint="Password"
                    android:drawableLeft="@drawable/ic_lock_open_black_24dp"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:textColor="#fff"
                    android:textSize="18dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"
                android:padding="5dp">
                <EditText
                    android:id="@+id/re_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:hint="Re_type password"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:drawableLeft="@drawable/ic_lock_open_black_24dp"
                    android:textColor="#fff"
                    android:textSize="18dp" />
            </com.google.android.material.textfield.TextInputLayout>



            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10pt"
                android:layout_marginBottom="10pt"
                android:text="REGISTER"
                android:textColor="#7a148e"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/already_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Already a Member?"
                android:textStyle="bold"
                android:textColor="#f9f2f2" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
</RelativeLayout>
