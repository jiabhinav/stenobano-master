<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.Update_job">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updare Job Notification"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:textColor="@color/textColor"
            android:layout_marginTop="2pt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5pt"
                    android:text="Title:"
                    android:textSize="7pt"
                    android:textColor="@color/textColor"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:paddingLeft="2pt"
                    android:padding="5pt"
                    android:inputType="textCapWords|textMultiLine"
                    android:layout_marginRight="20pt"
                    android:background="@drawable/my_border_round"
                    android:textColorHint="#000" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5pt"
                    android:text="Type:"
                    android:textSize="7pt"
                    android:textColor="@color/textColor"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:paddingLeft="2pt"
                    android:padding="5pt"
                    android:inputType="textCapWords|textMultiLine"
                    android:layout_marginRight="20pt"
                    android:background="@drawable/my_border_round"
                    android:textColorHint="#000" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5pt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5pt"
                        android:text="Choose"

                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_marginTop="2pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="20pt"
                        android:id="@+id/choose"
                        android:layout_height="20pt"
                        android:src="@mipmap/ic_choose_image"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5pt"
                    android:layout_marginLeft="10pt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5pt"
                        android:text="Camera"

                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_marginTop="2pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="20pt"
                        android:layout_height="20pt"
                        android:id="@+id/camera"
                        android:src="@mipmap/ic_camera_launcher"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5pt"
                    android:layout_marginLeft="10pt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5pt"
                        android:text="Selected Image"
                        android:id="@+id/select"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_marginTop="2pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="40pt"
                        android:layout_height="30pt"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView23"
                        />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:layout_marginRight="10pt"
            android:layout_marginTop="20pt"
            android:text="UPLOAD"
            android:id="@+id/save"
            android:textColor="#ffff"
            android:background="@color/cardbuttonbackground"/>

    </LinearLayout>
</RelativeLayout>