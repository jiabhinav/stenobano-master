<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10pt">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:text="OTP send on your registered Email Address"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="14dp"
            android:id="@+id/text"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textStyle="normal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:text="Enter OTP:-"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/text"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textColor"
            android:textSize="16dp"
            android:padding="10dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/otp"
            android:layout_width="50pt"
            android:maxLength="5"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:layout_marginRight="10pt"
            android:background="@drawable/my_border_round"
            android:inputType="number"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:hint="OTP Here..."
            android:layout_below="@+id/text"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#000" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="15pt"
        android:text="Verify"
        android:id="@+id/btn_dialog"
        android:textColor="#fff"
        android:background="@color/cardbuttonbackground"
android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5pt"
        android:id="@+id/cancel"
        android:layout_toLeftOf="@+id/btn_dialog"
        android:layout_marginRight="20dp"
        android:textColor="#f74d04"

        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend?"
           android:layout_marginLeft="20dp"
            android:id="@+id/re_send"
            android:layout_centerVertical="true"
           android:layout_toRightOf="@+id/btn_dialog"
            android:textColor="#f74d04"

            />
    </RelativeLayout>
</LinearLayout>