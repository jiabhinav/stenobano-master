<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".admin.Admin_Home"
    tools:showIn="@layout/app_bar_admin__home"
    android:id="@+id/content_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10pt"
        android:orientation="vertical"
        android:paddingRight="5pt"
        android:layout_marginLeft="5pt">

        <ImageView
            android:layout_width="80pt"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:scaleX="1.5"
            android:scaleY="1"
            android:src="@drawable/stenobano_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5.0"
            android:id="@+id/linear"
            android:layout_below="@+id/relative2"
            android:layout_marginTop="10pt"
            android:orientation="horizontal">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Dictionary"
                android:typeface="monospace"
                android:paddingTop="8pt"
                android:layout_marginRight="1pt"
                android:paddingBottom="8pt"
                android:id="@+id/atoz"
                android:layout_weight="1.0"

                android:background="@drawable/button_round_shap2"
                android:textColor="@color/buttontextColor"
                android:textSize="7pt"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingTop="8pt"
                android:paddingBottom="8pt"
                android:typeface="monospace"
                android:layout_weight="1.0"
                android:layout_marginLeft="1pt"
                android:background="@drawable/button_round_shap2"
                android:textStyle="bold"
                android:id="@+id/phreses"
                android:textColor="@color/buttontextColor"
                android:text="Phrases"
                android:textSize="7pt" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5.0"
        android:layout_below="@+id/relative2"
        android:layout_marginTop="10pt"
        android:orientation="horizontal">



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8pt"
            android:paddingBottom="8pt"
            android:id="@+id/shortform"
            android:textStyle="bold"
            android:layout_marginRight="1pt"
            android:typeface="monospace"
            android:layout_weight="1.0"
            android:background="@drawable/button_round_shap2"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/buttontextColor"
            android:text="Short Form"
            android:textSize="7pt" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8pt"
            android:paddingBottom="8pt"
            android:textStyle="bold"
            android:typeface="monospace"
            android:id="@+id/contraction"
          android:layout_marginLeft="1pt"
            android:layout_weight="1.0"
            android:background="@drawable/button_round_shap2"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/buttontextColor"
            android:text="Contraction"
            android:textSize="7pt" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5.0"
        android:layout_below="@+id/relative2"
        android:layout_marginTop="10pt"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:layout_marginRight="1pt"
            android:paddingTop="8pt"
            android:paddingBottom="8pt"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_weight="1.0"

            android:layout_gravity="center_horizontal"
            android:id="@+id/leagal"
            android:background="@drawable/button_round_shap2"
            android:textColor="@color/buttontextColor"
            android:text="Legal Phrases"
            android:textSize="7pt" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/buttontextColor"
            android:paddingTop="8pt"
            android:paddingBottom="8pt"
            android:layout_weight="1.0"
            android:layout_marginLeft="1pt"
            android:background="@drawable/button_round_shap2"
            android:id="@+id/long_speed_test"
            android:layout_gravity="center_horizontal"
            android:text="Long Speed Test"
            android:textSize="7pt"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5.0"
        android:layout_below="@+id/relative2"
        android:layout_marginTop="10pt"
        android:orientation="horizontal">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8pt"
            android:paddingBottom="8pt"
            android:id="@+id/sort_speed_test"
           android:layout_marginRight="1pt"
            android:layout_weight="1.0"
            android:text="Short Speed Test"
            android:background="@drawable/button_round_shap2"
            android:textColor="@color/buttontextColor"
            android:textSize="7pt"
            android:textStyle="bold"
            android:typeface="monospace"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@color/buttontextColor"
            android:paddingTop="8pt"
            android:paddingBottom="8pt"
            android:layout_weight="1.0"
           android:layout_marginLeft="1pt"
            android:background="@drawable/button_round_shap2"
            android:id="@+id/legal_speed_test"
            android:layout_gravity="center_horizontal"
            android:text="Legal Speed Test"
            android:textSize="7pt"/>
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5.0"
            android:layout_below="@+id/relative2"
            android:layout_marginTop="10pt"
            android:orientation="horizontal">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8pt"
                android:paddingBottom="8pt"
                android:id="@+id/kc_special_word"
            android:layout_marginRight="1pt"
                android:layout_weight="1.0"
                android:text="KC Dictation"
                android:background="@drawable/button_round_shap2"
                android:textColor="@color/buttontextColor"
                android:textSize="7pt"
                android:textStyle="bold"
                android:typeface="monospace"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8pt"
                android:paddingBottom="8pt"
                android:id="@+id/ne_dicitation"
                android:layout_marginLeft="1pt"
                android:layout_weight="1.0"
                android:text="N.E.Dictation"
                android:background="@drawable/button_round_shap2"
                android:textColor="@color/buttontextColor"
                android:textSize="7pt"
                android:textStyle="bold"
                android:typeface="monospace"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5.0"
            android:layout_below="@+id/relative2"
            android:layout_marginTop="10pt"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8pt"
                android:paddingBottom="8pt"
                android:id="@+id/leaglword"
                android:layout_marginLeft="1pt"
                android:layout_weight="1.0"
                android:text="All Legal Words"
                android:background="@drawable/button_round_shap2"
                android:textColor="@color/buttontextColor"
                android:textSize="7pt"
                android:textStyle="bold"
                android:typeface="monospace"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8pt"
                android:paddingBottom="8pt"
                android:id="@+id/wordofweek"
                android:layout_marginLeft="1pt"
                android:layout_weight="1.0"
                android:text="Words Of The Week"
                android:background="@drawable/button_round_shap2"
                android:textColor="@color/buttontextColor"
                android:textSize="7pt"
                android:textStyle="bold"
                android:typeface="monospace"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
