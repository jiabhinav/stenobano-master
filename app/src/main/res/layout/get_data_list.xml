<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2pt"
    android:id="@+id/rl2">

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/image"
        android:layout_width="28pt"
        android:layout_height="28pt"
        android:src="@drawable/profile"
        app:civ_border_width="1dp"
        android:layout_centerVertical="true"
        app:civ_border_color="#C5C6C7"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@+id/image"
        android:layout_toLeftOf="@+id/play_online"
        android:textColor="#040404"
        android:typeface="normal"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/datetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="10dp"
        android:padding="1dp"
        android:layout_toRightOf="@+id/image"
        android:layout_below="@+id/title"
        android:textSize="12dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datetext"
        android:id="@+id/rl_download"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/image"
         >

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Downloding..."
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="10dp" />
        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:layout_below="@+id/status"
            android:progress="0"
            android:layout_marginLeft="10dp"
            android:secondaryProgress="100" />

        <TextView
            android:id="@+id/text_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-4dp"
            android:layout_toRightOf="@+id/progressBar2"
            android:text="0%"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/play_online"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/play"
        android:padding="6dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:layout_toLeftOf="@+id/download"
        />

    <ImageView
        android:id="@+id/download"
        android:layout_height="24dp"
        android:layout_width="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5pt"
        android:layout_toLeftOf="@+id/view2"
        android:layout_centerVertical="true"
        android:src="@drawable/download"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_below="@+id/rl_download"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image"
        android:background="@color/gray"/>




</RelativeLayout>