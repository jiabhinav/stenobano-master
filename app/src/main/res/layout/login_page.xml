<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.Login"
    android:orientation="vertical"
    android:background="@color/bg"
    android:id="@+id/relatin_frag2"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_gradinat"
        android:layout_weight=".9">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login_top_bg"
            android:adjustViewBounds="true"
            android:rotation="180"
            />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/stenobano_logo"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:id="@+id/logo">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing=".1"
            android:textSize="16dp"
            android:id="@+id/mesg"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:text="Login">

        </TextView>

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text= "Logout,Click Here"
            android:textStyle="bold"
            android:textSize="18dp"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight=".5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15pt"
                android:padding="5dp"
                android:id="@+id/ll"
                android:layout_above="@+id/login"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="10 digit mobile no./Email"
                    android:inputType="text"
                    android:id="@+id/mobile"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10pt"
                    android:elevation="10dp"
                    android:layout_marginRight="10pt"
                    android:textColorHint="#8b8a8a"
                    android:background="@drawable/edittextbuttonstyle"
                    android:drawableLeft="@drawable/ic_smartphone_black_24dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="text"
                    android:id="@+id/email"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:layout_marginTop="15pt"
                    android:layout_marginLeft="10pt"
                    android:elevation="10dp"
                    android:layout_marginRight="10pt"
                    android:textColorHint="#8b8a8a"
                    android:background="@drawable/edittextbuttonstyle"
                    android:drawableLeft="@drawable/ic_smartphone_black_24dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Enter password"
                    android:id="@+id/password"
                    android:layout_marginTop="15pt"
                    android:layout_marginLeft="10pt"
                    android:layout_marginRight="10pt"
                    android:background="@drawable/edittextbuttonstyle"
                    android:drawableStart="@drawable/ic_vpn_key_black_24dp"
                    android:drawablePadding="5pt"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:elevation="10dp"
                    android:textColorHint="#8b8a8a"
                    tools:ignore="RtlCompat" />
            </LinearLayout>



            <Button
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:id="@+id/login"
                android:layout_marginLeft="10pt"
                android:layout_marginRight="10pt"
                android:text="LOG IN"
                android:textSize="8pt"
                android:padding="4pt"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="normal"
                android:letterSpacing=".1"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_bg"
                android:layout_marginBottom="80dp"
                android:layout_above="@+id/rl" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:id="@+id/pay"
                android:layout_marginLeft="10pt"
                android:layout_marginRight="10pt"
                android:text="PAY"
                android:textSize="8pt"
                android:padding="4pt"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="normal"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_bg"
                android:layout_marginBottom="80dp"

                android:layout_above="@+id/rl" />



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="2dp"
                android:id="@+id/rl"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password?"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:id="@+id/forget_password"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_marginLeft="2pt"
                    android:layout_marginRight="2pt"
                    android:layout_toRightOf="@+id/forget_password"
                    android:id="@+id/spaces"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New User?click here"
                    android:id="@+id/already_member"
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_toRightOf="@+id/spaces"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help>>"
                    android:id="@+id/help"
                    android:textSize="18dp"
                    android:textStyle="bold|italic"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/already_member"
                    android:textColor="@color/red"/>
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>