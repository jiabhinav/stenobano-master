<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2pt"
    android:id="@+id/rl">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hyyyyry"
        android:layout_toLeftOf="@+id/view2"
        android:inputType="textMultiLine"
        android:layout_marginStart="1pt"
        android:layout_marginEnd="10pt"
        android:textColor="#040404"
        android:typeface="monospace"
        android:maxLines="2"
        android:ems="10"
        android:textSize="8pt"
        android:textStyle="bold"
        tools:ignore="TextViewEdits" />
    <androidx.cardview.widget.CardView
        android:layout_width="28pt"
        android:layout_height="28pt"
        android:elevation="12dp"
        android:id="@+id/view2"
        android:layout_marginTop="2pt"
        app:cardCornerRadius="32dp"
        android:layout_gravity="left"
        android:layout_alignParentRight="true"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/play_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textStyle="bold"
        android:layout_marginLeft="1pt"
        android:textSize="6pt"
        android:typeface="monospace"
        android:textColor="#FF000000"
        android:layout_marginRight="5pt"
        android:drawableRight="@drawable/ic_play_circle_outline_black_24dp"
        android:layout_below="@+id/title"
        android:layout_toLeftOf="@+id/view2"
        />

    <TextView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textStyle="bold"
        android:layout_marginLeft="1pt"
        android:textSize="6pt"
        android:typeface="monospace"
        android:textColor="#FF000000"
        android:layout_marginRight="5pt"
        android:drawableRight="@drawable/ic_delete_forever_black_24dp"
        android:layout_below="@+id/title"
        android:layout_toLeftOf="@+id/play_online"
        />

    <TextView
        android:id="@+id/datetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offline"
        android:textStyle="bold"
        android:textColor="#e45604"
        android:layout_marginLeft="1pt"
        android:layout_marginTop="2pt"
        android:typeface="monospace"
        android:layout_below="@+id/title"
        android:textSize="6pt"
        />


</RelativeLayout>