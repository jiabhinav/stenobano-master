<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2pt"
        >
        <ImageView
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:id="@+id/image"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginRight="2pt"
            android:src="@drawable/renewal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile:-"
            android:padding="1pt"
            android:typeface="serif"
            android:textSize="6pt"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/image"
            android:id="@+id/mobile2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7210309464"
        android:padding="1pt"
        android:textColor="#363535"
        android:textSize="6pt"
        android:typeface="serif"
        android:layout_toRightOf="@+id/mobile2"
        android:id="@+id/mobile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invoice"
            android:padding="1pt"
            android:textColor="#363535"
            android:textSize="6pt"
            android:typeface="serif"
            android:layout_toRightOf="@+id/invoice2"
            android:layout_below="@+id/mobile"
            android:id="@+id/invoice"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invoice:-"
            android:padding="1pt"
            android:typeface="serif"
            android:textSize="6pt"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/mobile"
            android:id="@+id/invoice2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount:-"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="#363535"
            android:textSize="6pt"
            android:padding="1pt"
            android:layout_below="@+id/invoice2"
            android:layout_toRightOf="@+id/image"
            android:layout_marginRight="2pt"
            android:id="@+id/amount2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250"
        android:typeface="serif"
        android:textColor="#363535"
        android:textSize="6pt"
        android:padding="1pt"
        android:layout_toRightOf="@+id/amount2"
        android:layout_marginRight="2pt"
        android:layout_below="@+id/invoice2"
        android:id="@+id/amount"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1pt"
            android:typeface="serif"

            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="6pt"
            android:layout_below="@+id/amount"
         android:layout_toRightOf="@+id/image"
            android:text="Email:-"
            android:id="@+id/email2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1pt"
            android:typeface="serif"
            android:textSize="6pt"
            android:textColor="#000"
            android:layout_below="@+id/amount"
          android:layout_toRightOf="@+id/email2"
            android:text="abhinavshuklai1222gmail.com"
            android:id="@+id/email"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="1pt"
            android:typeface="serif"
            android:textSize="6pt"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@+id/email"
         android:layout_toRightOf="@+id/image"
            android:text="Valid:-"
            android:id="@+id/valid2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="1pt"
        android:typeface="serif"
        android:textSize="6pt"
        android:textColor="#363535"
        android:layout_below="@+id/email"
        android:layout_toRightOf="@+id/valid2"
        android:text="2018/06/20 to 2019/06/20"
        android:id="@+id/valid"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>