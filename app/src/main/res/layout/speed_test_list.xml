<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    android:id="@+id/rl">

    <!--  ListRow Left sied Thumbnail image -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- Title Of Song-->
            <TextView
                android:id="@+id/job_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:text=""
                android:layout_marginLeft="2pt"
                android:layout_marginRight="10pt"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="10pt"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="2018/03/22"
android:layout_marginRight="2pt"
                android:textSize="15dip"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/discription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:textColor="#343434"
            android:textSize="10dip"
            android:maxLines="2"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5pt">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:maxLines="2"
                android:layout_marginRight="2pt"
                android:id="@+id/updatetext"
                android:drawableLeft="@drawable/ic_play_circle_outline_black_24dp"
                android:text="Play"
                android:layout_gravity="center_vertical"
                android:padding="3dp"
                android:textColor="#343434"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f9c713">

            </View>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:maxLines="2"
                android:layout_marginRight="2pt"
                android:id="@+id/delete"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2pt"
                android:drawableLeft="@drawable/ic_file_download_black_24dp"
                android:textColor="#ab0707">

            </TextView>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>